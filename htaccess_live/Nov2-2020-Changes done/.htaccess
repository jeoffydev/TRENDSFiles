 

RewriteEngine on
RewriteCond $1 !^(index\.php|resources|robots\.txt)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L,QSA] 

### force www & HTTPS ###
RewriteCond %{REQUEST_URI} !^/allowed*
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L] 


RewriteCond %{HTTP_HOST} ^trends.nz [NC]
RewriteRule ^(.*)$ https://www.trends.nz/$1 [L,R=301] 

RewriteCond %{HTTP_HOST} ^trends.com.au [NC]
RewriteRule ^(.*)$ https://www.trends.com.au/$1 [L,R=301] 

<IfModule mod_headers.c>
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css|css|js|png|jpg)$">
		Header set Access-Control-Allow-Origin "*"
	</FilesMatch>
</IfModule>
